<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp"
    android:layout_marginBottom="9dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="9dp"
        android:layout_centerHorizontal="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_custom_edititem"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/itemHistory_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sucao"
            android:fontFamily="@font/allerta_stencil"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_marginStart="16dp"
            />

        <ImageButton
            android:id="@+id/itemHistory_delete_id"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:scaleX="1.3"
            android:src="@drawable/icon_delete"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="4dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_custom_edititem"
            />

        <TextView
            android:id="@+id/itemHistory_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/08/23"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:fontFamily="@font/allerta_stencil"
            android:layout_marginStart="16dp"
            android:layout_gravity="start"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/itemHistory_hour_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:58"
            android:fontFamily="@font/allerta_stencil"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            />


    </androidx.cardview.widget.CardView>>

</RelativeLayout>